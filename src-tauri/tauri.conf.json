{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCP Control",
  "version": "1.2.1",
  "identifier": "com.mcpcontrol.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MCP Control",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
